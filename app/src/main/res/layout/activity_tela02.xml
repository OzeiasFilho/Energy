<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010840"
    tools:context=".Tela02">

    <EditText
        android:id="@+id/anterior"
        android:layout_width="209dp"
        android:layout_height="62dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="18dp"
        android:background="#48e097"
        android:gravity="center"
        android:text="Medidor Anterior"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/atual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/atual"
        android:layout_width="206dp"
        android:layout_height="65dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="98dp"
        android:background="#48e097"
        android:gravity="center"
        android:text="Medidor Atual"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anterior" />

    <Button
        android:id="@+id/calcular"
        android:layout_width="151dp"
        android:layout_height="67dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="208dp"
        android:backgroundTint="#5984c9"
        android:text="Calcular"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atual" />


</androidx.constraintlayout.widget.ConstraintLayout>